<?xml version="1.0" encoding="UTF-8"?>
<templates>
    <t t-name="predict_revenue.PredictionChart">
        <div class="o_prediction_chart_container position-relative" style="width: 100%; min-height: 300px;">
            <canvas t-ref="canvas"></canvas>
            <div t-if="!props.record || !props.record.data.chart_data" class="position-absolute top-0 start-0 w-100 h-100 d-flex justify-content-center align-items-center bg-light bg-opacity-75">
                <div class="text-center text-muted">
                    <i class="fa fa-bar-chart fa-3x mb-2"></i>
                    <p>Sélectionnez un produit et une période pour afficher les prédictions.</p>
                </div>
            </div>
        </div>
    </t>
</templates>