<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Extend sale.order form to show prediction -->
    <record id="view_order_form_inherit_predict_revenue" model="ir.ui.view">
        <field name="name">sale.order.form.predict.revenue</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/notebook" position="before">
            <group string="Prédiction de Commande">
                <field name="predict_product_id"/>
                <field name="predict_year"/>
                <field name="predict_month"/>
                <field name="predicted_qty" readonly="1"/>
                <button name="predict_button" string="Prédire" type="object" class="btn-primary"/>
            </group>

            </xpath>
        </field>
    </record>

</odoo>
